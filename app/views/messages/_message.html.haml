.chat-main__messages__message-box{data: {message: {id: message.id}}}
  .chat-main__messages__message-box__info
    .chat-main__messages__message-box__info__user-name
      = message.user.name
    .chat-main__messages__message-box__info__sent-time
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .chat-main__messages__message-box__message
    - if message.body.present?
      = message.body
    = image_tag message.image_url, class: '' if message.image.present?
