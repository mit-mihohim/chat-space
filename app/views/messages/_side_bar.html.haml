.chat-side
  .chat-side__header
    .chat-side__header--side_box 
      = current_user.name
      .ul--menu
        .li--new-group
          = link_to new_group_path(current_user) do
            = icon('far', 'edit', class: "menu__btn")
        .li--edit-user
          = link_to edit_user_path(current_user) do
            = icon("fas", "cog", class: "menu__btn")

  .chat-side__groups
    .chat-side__groups--group_box
      - current_user.groups.each do |group|
        = link_to group_messages_path(current_user), class: "group" do
          .chat-side__groups--group_box__group-name
            = group.name
          .chat-side__groups--group_box__latest-message
